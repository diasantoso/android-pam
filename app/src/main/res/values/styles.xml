<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#137b6f</item>
        <item name="colorPrimaryDark">#024840</item>
        <item name="colorAccent">#82cfc6</item>
    </style>

    <style name="ToggleSwitchButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="outerRadius">50dp</item>
        <item name="handleDrawable">@drawable/ic_switch</item>
        <item name="upper">@drawable/plus</item>
        <item name="bottom">@drawable/min</item>
    </style>
</resources>
